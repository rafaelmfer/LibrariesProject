<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    BUTTONS /////////////////////////////////////////////////////////////////////////////-->
    <declare-styleable name="ButtonMaterialIcon">
        <attr name="android:background" />
    </declare-styleable>

    <!--    TOOLBARS ////////////////////////////////////////////////////////////////////////////-->
    <declare-styleable name="BasicToolbar">
        <attr name="toolbarTitle" format="string" />
        <attr name="showTitle" format="boolean" />
        <attr name="showCloseButton" format="boolean" />
        <attr name="showBackButton" format="boolean" />
    </declare-styleable>

    <!--    TEXT FIELDS /////////////////////////////////////////////////////////////////////////-->
    <declare-styleable name="TextViewMaterialIcon">
        <attr name="android:background" />
    </declare-styleable>

<!--    IMAGE VIEWS /////////////////////////////////////////////////////////////////////////////-->
    <declare-styleable name="CircleImageView">
        <attr name="strokeColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="highlightEnable" format="boolean" />
        <attr name="highlightColor" format="color" />
    </declare-styleable>
</resources>